<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.silentcoders.abdulqadir.invoiceapp.MakeBill_Phase2Activity">

    <LinearLayout
        android:id="@+id/ll_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="0dp"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/tv_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:visibility="gone"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mumbai" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/tv_date_label"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Date"
                android:visibility="gone"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text=" xx-xx-xxxx" />

        </LinearLayout>

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/tv_place_label"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Place "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text="Mumbai" />


        </LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/tv_remarks_label"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Remarks "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_remarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text="This is a test remark" />


        </LinearLayout>

    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_line1"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="right"
        android:id="@+id/ll_line2">

        <TextView
            android:id="@+id/tv_total_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grand Total : "
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_gravity="right" />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="10000"
            android:layout_gravity="right" />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_line2"
        android:orientation="horizontal"
        android:id="@+id/ll_line3">


            <TextView
                android:id="@+id/tv_sr_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="Sr. No."
                android:textStyle="bold"
                android:textSize="10sp"
                android:layout_weight="1.2"
                android:textColor="@color/white"
                android:layout_marginRight="2dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp" />


            <TextView
                android:id="@+id/tv_item_quantity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="Qty."
                android:textStyle="bold"
                android:textSize="10sp"
                android:layout_weight="1.2"
                android:textColor="@color/white"
                android:layout_marginRight="2dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp" />

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="Item Name"
                android:textStyle="bold"
                android:textSize="10sp"
                android:layout_weight="2.8"
                android:textColor="@color/white"
                android:layout_marginRight="2dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp" />


            <TextView
                android:id="@+id/tv_item_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="Price"
                android:textStyle="bold"
                android:textSize="10sp"
                android:layout_weight="1.2"
                android:textColor="@color/white"
                android:layout_marginRight="2dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp" />

            <TextView
                android:id="@+id/tv_item_discount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="Dscnt."
                android:textStyle="bold"
                android:textSize="10sp"
                android:layout_weight="1.2"
                android:textColor="@color/white"
                android:layout_marginRight="2dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp" />

            <TextView
                android:id="@+id/tv_item_final_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="Final Price"
                android:textStyle="bold"
                android:textSize="10sp"
                android:layout_weight="1.2"
                android:textColor="@color/white"
                android:layout_marginRight="2dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp" />

            <TextView
                android:id="@+id/tv_total_final_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="Total Price"
                android:textStyle="bold"
                android:textSize="10sp"
                android:layout_weight="1.2"
                android:textColor="@color/white"
                android:paddingLeft="1dp"
                android:paddingRight="1dp" />





    </LinearLayout>




    <!-- Bill Items -->
    <ScrollView
        android:layout_below="@+id/ll_line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_buttons"
        android:padding="0dp">

        <LinearLayout
            android:id="@+id/ll_bill_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>

    </ScrollView>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="right"
        android:layout_alignParentBottom="true"
        android:id="@+id/ll_buttons">

        <Button
            android:id="@+id/bt_add_carton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Add Carton"
            android:textSize="12sp"
            android:gravity="center" />

        <Button
            android:id="@+id/bt_add_item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Add Item"
            android:textSize="12sp"
            android:gravity="center" />

        <Button
            android:id="@+id/bt_view_bill"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="View Bill"
            android:textSize="12sp"
            android:gravity="center" />

        <Button
            android:id="@+id/bt_finish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Finish"
            android:textSize="12sp"
            android:gravity="center" />



    </LinearLayout>

</RelativeLayout>
