<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/tv_bill_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_sr_no"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:text="1"
        android:textSize="12sp"
        android:layout_weight="1.2"
        android:layout_marginRight="2dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp" />


    <TextView
        android:id="@+id/tv_item_quantity"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:text="100"
        android:textSize="12sp"
        android:layout_weight="1.2"
        android:layout_marginRight="2dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp" />

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:text="Item Name"
        android:textSize="12sp"
        android:layout_weight="2.8"
        android:layout_marginRight="2dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp" />

    <TextView
        android:id="@+id/tv_item_code"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_item_name"
        android:layout_alignBottom="@+id/tv_item_name"
        android:layout_toEndOf="@+id/tv_item_name"
        android:paddingBottom="0dp"
        android:text="Code"
        android:textColor="#9e0606"
        android:visibility="gone"
        android:gravity="left"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_item_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:text="Price"
        android:textSize="12sp"
        android:layout_weight="1.2"
        android:layout_marginRight="2dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp" />

    <TextView
        android:id="@+id/tv_item_discount"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:text="Dscnt."
        android:textSize="12sp"
        android:layout_weight="1.2"
        android:layout_marginRight="2dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp" />

    <TextView
        android:id="@+id/tv_final_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:text="Final Price"
        android:textSize="12sp"
        android:layout_weight="1.2"
        android:layout_marginRight="2dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp" />

    <TextView
        android:id="@+id/tv_total_final_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:text="Total Price"
        android:textSize="12sp"
        android:layout_weight="1.2"
        android:paddingLeft="1dp"
        android:paddingRight="1dp" />






    <TextView
        android:id="@+id/tv_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_item_quantity"
        android:layout_below="@+id/tv_item_quantity"
        android:visibility="gone"
        android:text="{Total}" />

    <TextView
        android:id="@+id/tv_total_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_total_price"
        android:layout_below="@+id/tv_total_price"
        android:visibility="gone"
        android:text="{Discount}" />




</LinearLayout>